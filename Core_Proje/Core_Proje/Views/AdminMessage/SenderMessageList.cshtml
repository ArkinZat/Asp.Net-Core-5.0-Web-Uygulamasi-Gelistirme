@model IEnumerable<EntityLayer.Concrete.WriterMessage>

@{
    ViewData["Title"] = "ReceiverMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar-Admin Giden Kutusu</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Alıcı</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Mesajı Gör</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.WirterMessageID</td>
                                <td>@item.ReceiverName</td>
                                <td>@item.Subject</td>
                                <td>@item.Date.ToShortDateString()</td>
                                <td><a asp-action="AdminMessageDelete" asp-route-id="@item.WirterMessageID" class="btn btn-danger">Sil</a></td>
                                <td><a asp-action="AdminMessageDetails" asp-route-id="@item.WirterMessageID" class="btn btn-success">Mesajı Gör</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

