@model List<Testimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Adı Soyadı </th>
                                <th> Şirket </th>
                                <th> Unvan </th>
                                <th> Güncelle </th>
                                <th> Sil </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.ImageUrl" alt="image" />
                                    </td>
                                    <td> @item.ClientName </td>
                                    <td> @item.Company </td>
                                    <td> @item.Title </td>
                                    <td> <a asp-action="EditTestimonial" asp-route-id="@item.TestimonialID" class="btn badge-outline-info">Güncelle</a></td>
                                    <td> <a asp-action="DeleteTestimonial" asp-route-id="@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <td><a asp-action="AddTestimonial" class="btn btn-outline-info">Yeni Referans Ekle</a></td>
                </div>
            </div>
        </div>
    </div>
</div>

