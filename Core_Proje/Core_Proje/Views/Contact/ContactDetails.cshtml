@model EntityLayer.Concrete.Message

@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Nesaj Detay Sayfası </p>
            <form class="forms-sample">
                <div class="form-group">
                    <label>ID</label>
                    <input asp-for="MessageID" class="form-control">
                </div>
                <div class="form-group">
                    <label>Adı</label>
                    <input asp-for="Name" class="form-control">
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })   @*Bu da HTML türünde input içerisine bilgi alma!!*@
                </div>
                <div class="form-group">
                    <label>Mesaj</label>
                    <textarea asp-for="Content" class="form-control" rows="6"></textarea>
                </div>
                <a asp-action="Index" class="btn btn-primary mr-2">İletişim Sayfası</a>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Listeye Dön</a>
</div>
